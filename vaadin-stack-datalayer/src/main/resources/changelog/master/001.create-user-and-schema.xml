<?xml version="1.0" encoding="utf-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">



    <changeSet author="thomas" id="public-create-master-user" dbms="postgresql">
        <sql>
            create role ${db.master} WITH
            NOSUPERUSER NOCREATEDB NOCREATEROLE NOINHERIT LOGIN ENCRYPTED PASSWORD' ${db.master.password}';
        </sql>
    </changeSet>
    <changeSet author="thomas" id="public-create-master-user" dbms="hsqldb">
        <sql>
            create user ${db.master} PASSWORD' ${db.master.password}';
        </sql>
    </changeSet>
    <changeSet author="thomas" id="public-grant-public-access-to-master" dbms="postgresql">
        <sql>
            grant all privileges on all tables in schema public to ${db.master}

        </sql>
    </changeSet>
</databaseChangeLog>